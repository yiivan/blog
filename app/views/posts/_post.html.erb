<div>
  <% @posts.each do |p| %>
    <div class="post-index col-xs-12 col-sm-4">
      <%= link_to post_path(p) do %>
        <% if p.image.present? %>
          <div>
            <%= image_tag p.image.url(:small), class: "post-index-image img-responsive" %>
          </div>
        <% end %>
        <div>
          <%= link_to post_path(p) do %>
            <div class="post-index-title"><strong><%= p.title %></strong></div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
