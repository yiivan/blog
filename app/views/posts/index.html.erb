<%= form_tag posts_path, method: :get, id: "search-form" do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Posts..." %>
  <%= submit_tag "Search" %>
<% end %>

<% if @posts.present? %>
  <div>
    <% @posts.each do |p| %>
      <div class="post-index col-lg-4">
        <%= link_to post_path(p) do %>
          <% if p.image.present? %>
            <div class="post-index-image">
              <%= image_tag p.image.url(:small) %>
            </div>
          <% end %>
          <div class="post-index-title">
            <%= link_to p.title, post_path(p) %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% else %>
  <h3>There are no blog posts containing the term "<%= params[:search] %>".</h3>
<% end %>

<div class="col-xs-12">
  <%= paginate @posts %>
  <%= page_entries_info @posts %>
</div>
