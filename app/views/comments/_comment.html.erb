<div id="<%= dom_id(comment) %>" class="well well-sm" style="<%= style if defined?(style) %>">
  <div class="comment-user-name"><strong><%= comment.user.full_name.titleize %></strong></div>
  <div class="comment-body"><%= comment.body %></div>

  <div class="edit-delete-btns">
    <% if can? :edit, comment %>
      <%= link_to "Edit", edit_post_comment_path(@post, comment),
                        remote: true,
                        data: {toggle: "modal", target: "#edit-comment"},
                        class: "btn btn-default btn-xs"
                        %>
    <% end %>
    <% if can? :destroy, comment %>
      <%= link_to "Delete", post_comment_path(@post, comment),
                            method: :delete,
                            remote: true,
                            data: {confirm: "Are you sure?"},
                            class: "btn btn-danger btn-xs" %>
    <% end %>
  </div>
</div>
